/* 3D Circle Preloader Styles */
.loader-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000; /* Match your page background */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
}

.sphere {
    position: relative;
    width: 100px; /* Increased from 60px to 100px */
    height: 100px; /* Increased from 60px to 100px */
    transform-style: preserve-3d;
    animation: rotateSphere 4s infinite linear;
}

.circle {
    position: absolute;
    width: 100px; /* Increased from 60px to 100px */
    height: 100px; /* Increased from 60px to 100px */
    border: 3px solid #6510DC; /* Purple color as previously set */
    border-radius: 50%;
    opacity: 0.7;
}

.circle:nth-child(1) {
    transform: rotateY(0deg) translateZ(50px); /* Adjusted translateZ to half of new width (100px / 2) */
    animation: rotateX 2s infinite linear;
}

.circle:nth-child(2) {
    transform: rotateY(90deg) translateZ(50px); /* Adjusted translateZ */
    animation: rotateY 2s infinite linear;
}

.circle:nth-child(3) {
    transform: rotateX(45deg) translateZ(50px); /* Adjusted translateZ */
    animation: rotateZ 2s infinite linear;
}

.circle:nth-child(4) {
    transform: rotateX(-45deg) translateZ(50px); /* Adjusted translateZ */
    animation: rotateZ 2s infinite linear reverse;
}

@keyframes rotateSphere {
    0% { transform: rotateX(0deg) rotateY(0deg); }
    100% { transform: rotateX(360deg) rotateY(360deg); }
}

@keyframes rotateX {
    0% { transform: rotateX(0deg); }
    100% { transform: rotateX(360deg); }
}

@keyframes rotateY {
    0% { transform: rotateY(0deg); }
    100% { transform: rotateY(360deg); }
}

@keyframes rotateZ {
    0% { transform: rotateZ(0deg); }
    100% { transform: rotateZ(360deg); }
}

/* Hide preloader instantly when page is loaded */
.loader-hidden {
    display: none;
}

/* Hide content initially */
.content {
    display: none;
}

/* Show content when loaded */
.content-loaded {
