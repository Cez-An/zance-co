                                <tr>
                                    <th>SL No</th>
                                    <th class="text-start ps-5">Coupon Name</th>
                                    <th>Coupon Code</th>
                                    <th>Start Date</th>
                                    <th>Expiry Date</th>
                                    <th>Min Price</th>
                                    <th>Offer Price</th>
                                    <th>Used</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
