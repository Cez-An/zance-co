<script>

async function updateQuantity(productId, change) {
    try {
        const response = await fetch('/user/cart', {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId, change }),
        });

        const data = await response.json();

        if (response.ok) {
            const itemElem = document.querySelector(`[data-product-id="${productId}"]`);
            const quantityElem = itemElem.querySelector('.quantity-display');
            const priceElem = itemElem.querySelector('.total-price');
            const unitPrice = parseFloat(itemElem.dataset.basePrice);

            let newQuantity = parseInt(quantityElem.textContent) + change;
            quantityElem.textContent = newQuantity;
            priceElem.textContent = `₹ ${(newQuantity * unitPrice).toLocaleString('en-IN')}`;

            updateOrderSummary(); // <-- Recalculate totals
        } else {
            Swal.fire({
                icon: 'error',
                text: data.error || 'Failed to update quantity',
            });
        }
    } catch (error) {
        console.error('Error updating quantity:', error);
        Swal.fire({
            icon: 'error',
            text: 'Something went wrong. Please try again later.',
        });
    }
}

async function removeFromCart(productId) {
    const userId = document.getElementById('userId').value;

    const result = await Swal.fire({
        text: "Do you really want to remove this item from your cart?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, remove it!',
        cancelButtonText: 'Cancel'
    });

    if (result.isConfirmed) {
        const response = await fetch(`/user/cart?userId=${userId}`, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId })
        });

        if (response.ok) {
            const itemElem = document.querySelector(`[data-product-id="${productId}"]`);
            itemElem.remove();

            // Update order summary
            updateOrderSummary();

            // If cart is empty, show empty message
            const remainingItems = document.querySelectorAll('.cart-item');
            if (remainingItems.length === 0) {
                document.getElementById('cart-container').innerHTML = `
                    <div class="text-center py-5 bg-dark" style="border-radius: 20px;">
                        <i class="fa-solid fa-cart-shopping fa-4x text-white mb-4" style="font-size: 3rem;"></i>
                        <p class="text-white fs-4 fw-medium">Your cart is empty!</p>
                        <a href="/user/renderShopPage" class="btn mt-3 px-5 py-2 text-white"
                            style="background: linear-gradient(90deg, #3f4664, #1a1549); border-radius: 20px;">
                            Start Shopping
                        </a>
                    </div>`;

                // Also clear order summary
                document.querySelector('.order-summary').innerHTML = `
                    <h5 class="fw-bold text-white mb-4" style="font-size: 1.5rem;">Order Summary</h5>
                    <p class="text-white text-center fs-5">No items in your cart.</p>
                `;
            }

            Swal.fire({
                text: 'The item has been removed from your cart.',
                icon: 'success',
                showConfirmButton: false,
                timer: 1500,
            });
        } else {
            Swal.fire({
                text: 'Failed to remove the item from the cart.',
                icon: 'error',
                showConfirmButton: false,
                timer: 1500,
            });
        }
    }
}

function updateOrderSummary() {
    const items = document.querySelectorAll('.cart-item');
    const summaryContainer = document.querySelector('.order-summary');

    if (!summaryContainer) return;

    let subtotal = 0;
    let summaryHTML = '';

    items.forEach(item => {
        const productName = item.querySelector('h6').textContent.trim();
        const quantity = parseInt(item.querySelector('.quantity-display').textContent);
        const unitPrice = parseFloat(item.dataset.basePrice);
        const itemTotal = quantity * unitPrice;
        subtotal += itemTotal;

        summaryHTML += `
            <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-white text-truncate" style="font-size: 0.95rem; max-width: 70%;">
                    ${quantity} x ${productName}
                </span>
                <span class="text-white fw-medium flex-shrink-0">
                    ₹ ${itemTotal.toLocaleString('en-IN')}
                </span>
            </div>
        `;
    });

    const deliveryCharge = subtotal < 499 ? 39 : 0;
    const grandTotal = subtotal + deliveryCharge;

    summaryContainer.innerHTML = `
        <h5 class="fw-bold text-white mb-4" style="font-size: 1.5rem;">Order Summary</h5>
        ${summaryHTML}
        <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="text-white" style="font-size: 0.95rem;">Delivery Charges</span>
            <span class="${deliveryCharge ? 'text-danger' : 'text-success'} flex-shrink-0">
                ${deliveryCharge ? `₹ ${deliveryCharge}` : 'Free'}
            </span>
        </div>
        <hr class="my-4" style="border-color: #E0E0E0;">
        <div class="d-flex justify-content-between align-items-center">
            <span class="fw-bold text-white" style="font-size: 1.2rem;">Total</span>
            <span class="fw-bold text-white flex-shrink-0" style="font-size: 1.2rem;">
                ₹ ${grandTotal.toLocaleString('en-IN')}
            </span>
        </div>
        <% if (cart && cart._id && user && user._id) { %>
        <button class="btn checkout-btn w-100 mt-4"
            onclick="goToCheckout('<%= cart._id %>', '<%= user._id %>')"
            style="border-radius: 12px; padding: 12px; font-size: 1.1rem; color: #000000;background-color: rgb(255, 255, 255);">Continue to Checkout</button>
        <% } %>
    `;
}


    // Go to Checkout
    function goToCheckout(cartId, userId) {
        window.location.href = `/user/checkout?cartId=${cartId}&userId=${userId}`;
    }
</script>

