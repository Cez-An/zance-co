    <body>
      
    
        <!-- Main Content -->
        <div class="container mt-1">
            <!-- Sidebar -->
            <div class="d-flex gap-2">
                <!-- Orders Content -->
                <div class="col-9">
                    <div class="page-header text-white">
                        <h1 class="text-white">My Orders</h1>
                    </div>
                
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <div class="order-card bg-light">
                                <!-- Order Header -->
                                <div class="order-header">
                                    <span class="order-id">Order - <%= order.orderId %></span>
                                    <span class="order-status <%= (order.status || '').toLowerCase() %>">
                                        <%= order.status || 'Pending' %>
                                    </span>
                                </div>
                    
                                <!-- Order Details -->
                                <div class="order-details">
                                    <div>
                                        <span>Order Date:</span>
                                        <%= new Date(order.createdAt).toLocaleString('en-US', {
                                            weekday: 'short',
                                            year: 'numeric',
                                            month: 'short',
                                            day: '2-digit',
                                            hour: '2-digit',
                                            minute: '2-digit',
                                            hour12: true
                                          }) %>
                                    </div>
                                    <div>
                                        <span>Total: </span>₹ <%= order.totalPrice %>
                                    </div>
                                </div>
                    
                                <!-- Order Items -->
                                <div class="order-items">
                                    <% order.orderItems.forEach(item => { %>
                                        <div class="item-row">
                                            <img src="<%= item.productImage || '/images/default-product.png' %>" 
                                                alt="Product Image" 
                                                class="item-img">
                                            <div class="item-info">
                                                <h6><%= item.product.name %></h6>
                                                <p>Qty: <%= item.quantity %> | ₹ <%= order.totalPrice %></p>
                                            </div>
                                            <span class="item-price">₹ <%= order.totalPrice %></span>
                                        </div>
                                    <% }) %>
                                </div>
                    
                                <!-- Action Buttons -->
                                <div class="d-flex gap-3 justify-content-end">
                                    <button class="btn btn-primary details-btn" data-order-id="<%= order.orderId %>">View Order</button>
                                    <% if (order.status !== 'Cancelled') { %>
                                        <% if (order.status === 'Delivered') { %>
                                            <button class="btn btn-outline-secondary return-btn" data-order-id="<%= order.orderId %>">Return</button>
                                        <% } else { %>
                                            <button class="btn btn-outline-secondary cancel-btn" data-order-id="<%= order.orderId %>">Cancel</button>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="no-orders">
                            <p class="no-orders">You haven't placed any orders yet. Start shopping now!</p>
                            <a href="/user/renderShopPage" class="btn w-25 btn-primary">Shop Now</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    
        <script>
            document.querySelectorAll('.details-btn').forEach(button => {
                button.addEventListener('click', (e) => {
                    const orderId = e.target.dataset.orderId;
                    console.log(orderId);
                    window.location.href = `/user/orderDetails?id=${orderId}`;
                });
            });
        </script>
    






    <script>
        window.addEventListener('load', function() {
            const loader = document.querySelector('.loader-wrapper');
            const content = document.querySelector('.content');
            setTimeout(function() {
                loader.classList.add('loader-hidden');
                content.classList.add('content-loaded');
            }, 2000);
        });
    </script>
