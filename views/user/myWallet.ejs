    <style>
        
        .wallet-card {
            /* background: line ar-gradient(135deg, #6f0303 17%, #b7a4a4 100%); */
            border: 1px solid #333;
            border-radius: 16px;
            transition: all 0.3s ease;
            color: white;
        }
        
        .wallet-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.4);
        }
        
        .add-btn {
            background: linear-gradient(135deg, #6b46c1 0%, #805ad5 100%);
            border: none;
            transition: all 0.3s ease;
            color: white;
        }
        
        .add-btn:hover {
            transform: scale(1.02);
            box-shadow: 0 0 20px rgba(107, 70, 193, 0.5);
        }
        
        .quick-action-btn {
            background-color: #111;
            border: 1px solid #333;
            color: white;
            transition: all 0.2s ease;
        }
        
        .quick-action-btn:hover {
            background-color: #222;
            transform: translateY(-2px);
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(107, 70, 193, 0.7);
            }
            70% {
                box-shadow: 0 0 0 10px rgba(107, 70, 193, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(107, 70, 193, 0);
            }
        }
        
        .wallet-icon {
            background-color: #222;
            color: #9f7aea;
        }
        
        .fast-pay-badge {
            background-color: #222;
            color: #f6ad55;
        }
    </style>

        <main class="container mt-4 bg-secondary">
            <div class="row">
    
                <!-- Wallet Display -->
                <div class="col-md-9 col-lg-10 col-xl-9 p-4">
