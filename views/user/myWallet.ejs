                        <div class="profile-header d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <i class="fa-solid fa-wallet me-3" style="font-size: 40px; color: #ffffff;"></i>&nbsp;&nbsp;&nbsp;&nbsp;
                                <div>
                                    <h4 style="color: #ffffff; margin: 0;">Your Wallet</h4>
                                    <div class="mt-1">
                                        <small class="text-muted">Manage your balance</small>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
    
                        <!-- Wallet Balance -->
                        <div class="info-grid" style="margin-top: 20px;">
                            <div class="info-item">
                                <div class="info-label">Current Balance</div>
                                <div class="info-value" style="font-size: 24px; color: #ffffff;">
                                    â‚¹ <%= user.wallet || '0.00' %>.00 
                                </div>
                            </div>
                            
                        </div>  
                    </div>
                </div>
            </div>
    
        </main>
                <div class="bottom-nav">
