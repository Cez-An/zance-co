        .heart {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 24px;
            color: #ff69b4; /* Pink heart */
            z-index: 2; /* Ensure it stays on top */
        }

        .product-title {
            font-size: 16px;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .rating {
            font-size: 14px;
            color: #ffd700; /* Gold color for stars */
            margin-bottom: 5px;
        }

        .price {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #6c757d;
            border-color: #6c757d;
            padding: 5px 20px;
            font-size: 14px;
        }

        .btn-primary:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }
        
        .labellink{
        position: relative;
            opacity: 0;
            background-color: red;
            width: 200px;
