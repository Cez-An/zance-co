    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4 class="text-white">Shop</h4>
                        <div class="breadcrumb__links">
                            <a href="/user" class="text-white">Home</a>
