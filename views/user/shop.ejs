        .new-label {
            position: absolute;
            top: 10px;
            left: 10px;
            background: white;
            color: black;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
            z-index: 2; /* Ensure it stays on top */
