<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* General Styles */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #252525;
            color: #ffffff;
        }

        /* Container and Layout */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .mt-4 {
            margin-top: 1.5rem;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -15px;
        }

        .col-md-9 {
            flex: 0 0 75%;
            max-width: 75%;
            padding: 0 15px;
        }

        /* Profile Card */
        .profile-card {
            background-color: #000000;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .profile-header {
            padding-bottom: 20px;
            border-bottom: 1px solid #333;
        }

        .profile-avatar {
            border-radius: 50%;
            object-fit: cover;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 14px;
            transition: background-color 0.3s;
        }

        .btn-primary {
            background-color: #6510DC;
            color: #ffffff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #4a0ca8;
        }

        /* Info Grid */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-top: 30px;
        }

        .info-item {
            display: flex;
            flex-direction: column;
        }

        .info-label {
            font-size: 14px;
            color: #999;
            margin-bottom: 5px;
        }

        .info-value {
            font-size: 16px;
            color: #ffffff;
        }

        /* Stats Section */
        .stats-section {
            margin-top: 30px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            text-align: center;
        }

        .stat-item {
            background-color: #1a1a1a;
            padding: 15px;
            border-radius: 8px;
        }

        .stat-value {
            font-size: 24px;
            color: #6510DC;
            font-weight: bold;
        }

        .stat-label {
            font-size: 14px;
            color: #999;
            margin-top: 5px;
        }

        /* Referral Section */
        .referral-section {
            margin-top: 30px;
            padding: 20px;
            background-color: #1a1a1a;
            border-radius: 8px;
            align-items: center;
        }

        .referral-content h6 {
            margin: 0;
            font-size: 16px;
        }

        .referral-content p {
            margin: 5px 0 0;
            font-size: 14px;
            color: #999;
        }

        .input-group {
            display: flex;
            align-items: center;
        }

        .form-control {
            background-color: #333;
            border: 1px solid #555;
            color: #ffffff;
            border-radius: 4px 0 0 4px;
        }

        .form-control:focus {
            outline: none;
            border-color: #6510DC;
        }

        .admin-btns {
            background-color: #6510DC;
            border: none;
            border-radius: 0 4px 4px 0;
        }

        .admin-btns:hover {
            background-color: #4a0ca8;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .col-md-9 {
                flex: 0 0 100%;
                max-width: 100%;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .referral-section {
                flex-direction: column;
                text-align: center;
            }

            .input-group {
                margin-top: 15px;
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <main class="container mt-4">
        <div class="row g-5">    
            <!-- Optimized Profile Display -->
            <div class="col-md-9">
                <div class="profile-card">
                    <div class="profile-header d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <img src="<%= user.profilePic || '/placeholder.jpg' %>" alt="Profile Picture"
                                class="profile-avatar me-3" width="80" height="80">
                            <div>
                                <h4 style="color: #3C1549; margin: 0;">
                                    <%= user.name %>
                                </h4>
                                <div class="mt-1"><small class="text-muted">Member since <%= new Date(user.createdAt).toLocaleDateString() %></small></div>
                            </div>
                        </div>
                        <a href="/user/profileU?userId=<%= user.userId %>" class="btn btn-primary">
                            <i class="fa-solid fa-pen me-2"></i>Edit Profile
                        </a>
                    </div>

                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Email Address</div>
                            <div class="info-value">
                                <%= user.email %>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Mobile Number</div>
                            <div class="info-value">
                                <%= user.phone || 'Not provided' %>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Gender</div>
                            <div class="info-value">
                                <%= user.gender || 'Not specified' %>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Username</div>
                            <div class="info-value">
                                <%= user.username || 'Username not set yet' %>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Content: Stats -->
                    <div class="stats-section">
                        <h5 style="color: #3C1549; margin-bottom: 15px;">Your Stats</h5>
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-value">
                                    <%= user.ordersCount || 0 %>
                                </div>
                                <div class="stat-label">Orders Placed</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">
                                    <%= user.reviewsCount || 0 %>
                                </div>
                                <div class="stat-label">Reviews Written</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">â‚¹<%= user.totalSpent || '0.00' %>
                                </div>
                                <div class="stat-label">Total Spent</div>
                            </div>
                        </div>
                    </div>

                    <!-- Referral Section -->
                    <div class="referral-section d-flex justify-content-between">
                        <div class="referral-content">
                            <h6 style="color: #3C1549;">Refer a Friend</h6>
                            <p class="text-muted">Share your referral code with friends and earn rewards!</p>   
                        </div>
                        <div class="input-group align-self-end">
                            <input type="text" 
                                   class="form-control" 
                                   value="<%= user.referalCode %>" 
                                   id="referralCode" 
                                   readonly>
                            <button class="btn admin-btns text-white" 
                                    onclick="copyReferralCode()">
                                <i class="fa-solid fa-copy me-1"></i>Copy
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        function copyReferralCode() {
            const referralCode = document.getElementById('referralCode');
            referralCode.select();
            document.execCommand('copy');
            alert('Referral code copied to clipboard!');
        }
    </script>
</body>
</html>