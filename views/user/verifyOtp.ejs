<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Confirmation</title>
    <link rel="apple-touch-icon" sizes="180x180" href="img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="img/favicon/favicon-16x16.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(to bottom, #e6e6e6, #6a40bf);
        }

        .container-custom {
            max-width: 800px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .otp-box {
            padding: 30px;
            text-align: center;
            border: 2px solid #ddd;
            border-radius: 10px;
        }

        .otp-input {
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container container-custom p-4">
        <div class="row">
            <!-- Left Section -->
            <div class="col-md-6 d-flex align-items-center justify-content-center flex-column">
                <img src="/img/logo/ZANCE&co _SignUp_page_logo.svg" class="img-fluid" alt="Logo">
            </div>
            <!-- Right Section -->
            <div class="col-md-6 d-flex align-items-center">
                <div class="otp-box w-100">
                    <h2>Confirm with OTP</h2>
                    <p>Please check your mail address for OTP</p>
                    <form id="otpForm" onsubmit="return validateOTPForm(event)">
                        <input type="number" name="otp" class="form-control otp-input mb-3" id="otp-input"
                            placeholder="Enter OTP" maxlength="4" required>
                        <button type="submit" class="btn btn-secondary w-100">Confirm</button>
                        
                        <p>Time left: <span id="timer">60</span> seconds</p>
                        <button id="resend" disabled onclick="restartTimer()">Resend OTP</button>

                    </form>
                    <a href="/user/login" class="d-block mt-3">Go back to Login page</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>


let timeLeft = 60;
    let timerElement = document.getElementById("timer");
    let resendButton = document.getElementById("resend");

    function startTimer() {
        let timerInterval = setInterval(() => {
            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                timerElement.innerText = "Time's up!";
                resendButton.disabled = false; // Enable "Resend OTP"
            } else {
                timerElement.innerText = timeLeft;
                timeLeft--;
            }
        }, 1000);
    }

    async function restartTimer() {
        timeLeft = 60; // Reset timer
        timerElement.innerText = timeLeft;
        resendButton.disabled = true; // Disable "Resend OTP"
        startTimer();

        try {
            const response = await fetch('/user/resendOtp', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: "OTP Resent Successfully",
                    showConfirmButton: false,
                    timer: 1500,
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while resending OTP. Please try again'
                });
            }
        } catch (error) {
            console.error("Error resending OTP:", error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Something went wrong. Please try again'
            });
        }

        return false;
    }

    startTimer();

    async function validateOTPForm(event) {
        event.preventDefault();

        const otpInput = document.getElementById('otp-input').value;

        try {
            const response = await fetch('/user/verifyOtp', {
                method: "POST",
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ otp: otpInput })
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire({
                    position: "center",
                    icon: 'success',
                    title: "OTP Verified Successfully",
                    showConfirmButton: false,
                    backdrop: false,
                    timer: 1500
                }).then(() => {
                    window.location.href = data.redirectUrl; // OTP Verified Successfully
                });
            } else {
                Swal.fire({
                    position: "center",
                    icon: 'error',
                    title: 'Error',
                    backdrop: false,
                    text: data.message,
                }).then(() => {
                    document.getElementById("otp-input").value = "";
                });
            }
        } catch (error) {
            console.error("Error verifying OTP:", error);
            Swal.fire({
                position: "center",
                icon: 'error',
                backdrop: false,
                title: 'Invalid OTP',
                text: 'Please try Again'
            }).then(() => {
                document.getElementById("otp-input").value = "";
            });
        }

        return false;
    }
    </script>
</body>

</html>